    <div class="container-fluid">
        <div class="pt-5">
            <div class="row">
                <div class="col-6">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">Adultos Mayores:</h6>
                            <form class="form-group" action="">
                                <input class="form-control mb-2" type="number" id="rut" name="rut" placeholder="Buscar por RUT">
                                <input value="Buscar" class="w-25 btn btn-primary">
                                <input type="reset" class="w-25 btn btn-secondary">
                                <a href="/persona/crear" class="btn btn-success w-25">Agregar Persona</a>
                            </form>
                            <table class="table table-hover mt-4">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Direccion</th>
                                        <th scope="col">Edad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each personas}}
                                    <tr>
                                        <td>{{nombre}}</td>
                                        <td>{{direccion}}</td>
                                        <td>{{edad}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


                <div class="col-6">
                    <div class="card1">
                        <h6>Datos</h6>
                        <div class="card-body">
                            This is some text within a card body.
                        </div>
                    </div>

                    <form class="mt-3">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-4">
                                    <label class="elige" for="messageOption">Enviar mensaje a trav√©s de alguno de estos medios:</label>
                                    <select class="form-control" id="messageOption" name="messageOption" size="4" multiple>
                                        <option value="whatsapp">WhatsApp</option>
                                        <option value="telegram">Telegram</option>
                                        <option value="sms">SMS</option>
                                        <option value="mail">Mail</option>
                                    </select>
                                    <small>Ctrl + click para seleccionar varios.</small>
                                </div>
                                <div class="col-8">
                                    <div class="mensaje">
                                        <textarea class="form-control" placeholder="Escribe aca el mensaje a enviar..." name="message" id="message" rows="10"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>

